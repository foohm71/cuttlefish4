# Cuttlefish Multi-Agent RAG System - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# OpenAI Configuration
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBED_MODEL=text-embedding-3-small

# ===========================================
# Supabase Configuration (Primary Database)
# ===========================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-service-role-key-here

# ===========================================
# Qdrant Configuration (Legacy/Optional)
# ===========================================
QDRANT_URL=https://your-qdrant-instance.com
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=cuttlefish3

# ===========================================
# Cohere Configuration (Optional - for reranking)
# ===========================================
COHERE_API_KEY=your-cohere-api-key-here

# ===========================================
# Server Configuration
# ===========================================
HOST=127.0.0.1
PORT=8000

# ===========================================
# Data Processing Configuration
# ===========================================
BATCH_SIZE=100
MAX_CHARS=16000

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# Performance Configuration  
# ===========================================
# Maximum number of results per search
MAX_SEARCH_RESULTS=50

# Default similarity threshold for vector search
SIMILARITY_THRESHOLD=0.7

# Default weights for hybrid search
VECTOR_WEIGHT=0.7
KEYWORD_WEIGHT=0.3